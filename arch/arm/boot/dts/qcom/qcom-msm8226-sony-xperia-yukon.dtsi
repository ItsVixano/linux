/*
 * The .dts should first include qcom-msm8226.dtsi or msm8926.dtsi depending on
 * the SoC on the given device.
 */

#include "pm8226.dtsi"

/ {
	chosen {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		stdout-path = "display0";

		framebuffer: framebuffer@3201000 {
			compatible = "simple-framebuffer";
			reg = <0x3201000 (540 * 960 * 3)>;
			width = <540>;
			height = <960>;
			stride = <(540 * 3)>;
			format = "r8g8b8";

			clocks = <&mmcc MDSS_AHB_CLK>,
				 <&mmcc MDSS_AXI_CLK>,
				 <&mmcc MDSS_BYTE0_CLK>,
				 <&mmcc MDSS_MDP_CLK>,
				 <&mmcc MDSS_PCLK0_CLK>,
				 <&mmcc MDSS_VSYNC_CLK>;
			power-domains = <&mmcc MDSS_GDSC>;
		};
	};

	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		display_reserved: framebuffer@3201000 {
			reg = <0x3201000 (540 * 960 * 3)>;
			no-map;
		};
	};
};
